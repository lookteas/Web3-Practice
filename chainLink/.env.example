# 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 网络 RPC URL
RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
# 或使用 Alchemy
# RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# 部署账户私钥（不要提交到版本控制）
PRIVATE_KEY=your_private_key_here

# ChainLink Automation 相关配置
CHAINLINK_AUTOMATION_REGISTRY=0x86EFBD0b6736Bed994962f9797049422A3A8E8Ad
CHAINLINK_LINK_TOKEN=0x779877A7B0D9E8603169DdbD7836e478b4624789

# 合约配置
DEFAULT_THRESHOLD=1000000000000000000  # 1 ETH in wei
MIN_INTERVAL=3600  # 1 hour in seconds

# Etherscan API Key (用于验证合约)
ETHERSCAN_API_KEY=your_etherscan_api_key